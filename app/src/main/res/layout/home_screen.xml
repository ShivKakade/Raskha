<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/AppTheme.NoActionBar"
    android:weightSum="20"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="3.5"
      android:background="@color/home_back"
      android:orientation="horizontal"
      android:weightSum="10">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="All Hostel problems, Solution is Raksha!"
        android:gravity="center"

        android:textSize="22dp"
        android:textColor="@color/black"
        android:textStyle="bold|italic"

        />

  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="5.5"
      android:background="@color/home_back"
      android:orientation="horizontal"
      android:weightSum="10"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="5dp"
        android:layout_weight="5"
        >

      <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          >

        <ImageButton
            android:id="@+id/Sos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:paddingBottom="25dp"
            android:paddingEnd="30dp"
            android:paddingStart="30dp"
            android:paddingTop="35dp"
            android:scaleType="fitCenter"
            android:src="@drawable/sos"

            android:text="SoS"
            android:textColor="@color/black"
            tools:ignore="DuplicateIds" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:clickable="false"
            android:gravity="center"
            android:text="SoS"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
      </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="2dp"
        android:layout_weight="5"
        >

      <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          >

        <ImageButton
            android:id="@+id/laws"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:paddingBottom="25dp"
            android:paddingEnd="30dp"
            android:paddingStart="30dp"
            android:paddingTop="35dp"
            android:scaleType="fitCenter"
            android:src="@drawable/selfdefence"
            android:text="Council"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:clickable="false"
            android:gravity="center"
            android:text="Self Defence"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
      </FrameLayout>
    </LinearLayout>
  </LinearLayout>

  <LinearLayout
      android:id="@+id/fl_3"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="5.5"
      android:background="@color/home_back"
      android:orientation="horizontal"
      android:weightSum="10"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="5dp"
        android:layout_weight="5"
        tools:ignore="NestedWeights"
        >

      <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          >

        <ImageButton
            android:id="@+id/imagebt_hr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:paddingBottom="25dp"
            android:paddingEnd="30dp"
            android:paddingStart="30dp"
            android:paddingTop="35dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_mess_color"
            android:text="Mess"
            android:textColor="@color/black"
            android:textSize="15sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:clickable="false"
            android:gravity="center"
            android:text="Mess"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
      </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="2dp"
        android:layout_weight="5"
        >

      <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          >
        <ImageButton
            android:id="@+id/imagebt_bp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:paddingBottom="25dp"
            android:paddingEnd="30dp"
            android:paddingStart="30dp"
            android:paddingTop="35dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_complaints_color"
            android:text="Complaints"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:clickable="false"
            android:gravity="center"
            android:text="Complaints"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
      </FrameLayout>
    </LinearLayout>
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="5.5"
      android:background="@color/home_back"
      android:orientation="horizontal"
      android:weightSum="10"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="5dp"
        android:layout_weight="5"
        >

      <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          >

        <ImageButton
            android:id="@+id/imagebt_his"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:paddingBottom="25dp"
            android:paddingEnd="30dp"
            android:paddingStart="30dp"
            android:paddingTop="35dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_resource_color"
            android:text="Resources"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:clickable="false"
            android:gravity="center"
            android:text="Resources"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
      </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="2dp"
        android:layout_weight="5"
        >

      <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          >

        <ImageButton
            android:id="@+id/image_ec"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:paddingBottom="25dp"
            android:paddingEnd="30dp"
            android:paddingStart="30dp"
            android:paddingTop="35dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_council_color"
            android:text="Council"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:clickable="false"
            android:gravity="center"
            android:text="Council"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
      </FrameLayout>
    </LinearLayout>
  </LinearLayout>
</LinearLayout>
