<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cell_title_background"
    android:orientation="vertical"
    >
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/feedback_imageView"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="top|start"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/icon_nav"
        app:civ_border_color="@color/white"
        app:civ_border_width="1dp"
        />
    <TextView
        android:id="@+id/mess_feedback_username"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignTop="@id/feedback_imageView"
        android:layout_toEndOf="@id/feedback_imageView"
        android:gravity="start|center_vertical"
        android:paddingStart="20dp"
        android:text="@string/username"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/feedback_imageView"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:background="@color/divider_color"
        />
  </RelativeLayout>

  <TextView
      android:id="@+id/mess_feedback_title"
      android:layout_width="match_parent"
      android:layout_height="30dp"
      android:gravity="center"
      android:paddingBottom="3dp"
      android:paddingEnd="5dp"
      android:paddingStart="5dp"
      android:paddingTop="3dp"
      android:text="title"
      android:textColor="@color/light_black"
      android:textSize="17sp"
      />
  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginEnd="10dp"
      android:layout_marginStart="10dp"
      android:layout_marginTop="3dp"
      android:background="@color/divider_color"
      />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:weightSum="9"
      >
    <TextView
        android:id="@+id/mess_feedback_day"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_weight="4"
        android:gravity="center"
        android:paddingEnd="3dp"
        android:paddingStart="5dp"
        android:text="day"
        android:textColor="@color/light_black"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/mess_feedback_date"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:layout_weight="5"
        android:gravity="end|center_vertical"
        android:paddingEnd="10dp"
        android:paddingStart="3dp"
        android:text="date"
        android:textColor="@color/light_black"
        android:textSize="15sp"
        />
  </LinearLayout>
  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginEnd="10dp"
      android:layout_marginStart="10dp"
      android:layout_marginTop="3dp"
      android:background="@color/divider_color"
      />

  <RatingBar
      android:id="@+id/mess_feedback_rating"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="start"
      android:layout_marginStart="20dp"
      android:layout_marginTop="5dp"
      android:isIndicator="true"
      android:numStars="5"
      android:rating="0"
      android:theme="@style/RatingBar"
      style="@style/Base.Widget.AppCompat.RatingBar.Small"
      />
  <TextView
      android:id="@+id/mess_feedback_desc"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_marginTop="5dp"
      android:gravity="center"
      android:paddingEnd="5dp"
      android:paddingStart="5dp"
      android:text="desc"
      android:textColor="@color/light_black"
      android:textSize="15sp"
      />
</LinearLayout>
